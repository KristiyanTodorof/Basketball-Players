@using BasketballPlayers.Application.ViewModels.PlayerViewModels
@model PlayerDetailViewModel

@{
    ViewData["Title"] = "Player Details";
}

<h1>@Model.Name</h1>

<div>
    <h4>Player Details</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>
            </dl>
        </div>
        @if (Model.Stats != null)
        {
            <div class="col-md-6">
                <h4>Statistics</h4>
                <dl class="row">
                    <dt class="col-sm-6">GP</dt>
                    <dd class="col-sm-6">@Model.Stats.GamesPlayed</dd>

                    <dt class="col-sm-6">MIN>
                    <dd class="col-sm-6">@Model.Stats.Minutes</dd>

                    <dt class="col-sm-6">PTS</dt>
                    <dd class="col-sm-6">@Model.Stats.PointsScored</dd>

                    <dt class="col-sm-6">PTS%</dt>
                    <dd class="col-sm-6">@Model.Stats.ThreePointPercentage%</dd>

                    <dt class="col-sm-6">FGS</dt>
                    <dd class="col-sm-6">@Model.Stats.FieldGoals</dd>

                    <dt class="col-sm-6">FGA</dt>
                    <dd class="col-sm-6">@Model.Stats.FieldGoalsAttempted</dd>

                    <dt class="col-sm-6">FG%</dt>
                    <dd class="col-sm-6">@Model.Stats.FieldGoalPercentage%</dd>

                    <dt class="col-sm-6">3PM</dt>
                    <dd class="col-sm-6">@Model.Stats.ThreePointFieldGoals</dd>

                    <dt class="col-sm-6">3PA</dt>
                    <dd class="col-sm-6">@Model.Stats.ThreePointFieldGoalsAttempted</dd>

                    <dt class="col-sm-6">3PT%</dt>
                    <dd class="col-sm-6">@Model.Stats.ThreePointPercentage%</dd>

                    <dt class="col-sm-6">FTM</dt>
                    <dd class="col-sm-6">@Model.Stats.FreeThrowsMade</dd>

                    <dt class="col-sm-6">FTA</dt>
                    <dd class="col-sm-6">@Model.Stats.FreeThrowsAttempted</dd>

                    <dt class="col-sm-6">FT%</dt>
                    <dd class="col-sm-6">@Model.Stats.FreeThrowPercentage%</dd>

                    <dt class="col-sm-6">OREB</dt>
                    <dd class="col-sm-6">@Model.Stats.OffensiveRebounds</dd>

                    <dt class="col-sm-6">DREB</dt>
                    <dd class="col-sm-6">@Model.Stats.DefensiveRebounds</dd>

                    <dt class="col-sm-6">TR</dt>
                    <dd class="col-sm-6">@Model.Stats.TotalRebounds</dd>

                    <dt class="col-sm-6">RPG</dt>
                    <dd class="col-sm-6">@Model.Stats.ReboundsPerGame</dd>

                    <dt class="col-sm-6">AST</dt>
                    <dd class="col-sm-6">@Model.Stats.Assists</dd>

                    <dt class="col-sm-6">APG</dt>
                    <dd class="col-sm-6">@Model.Stats.AssistsPerGame</dd>

                    <dt class="col-sm-6">STL</dt>
                    <dd class="col-sm-6">@Model.Stats.Steals</dd>

                    <dt class="col-sm-6">BLK</dt>
                    <dd class="col-sm-6">@Model.Stats.Blocks</dd>

                    <dt class="col-sm-6">TOV</dt>
                    <dd class="col-sm-6">@Model.Stats.Turnovers</dd>

                    
                </dl>
                <a asp-controller="Stats" asp-action="Edit" asp-route-id="@Model.Stats.Id" class="btn btn-warning">Edit Stats</a>
            </div>
        }
        else
        {
            <div class="col-md-6">
                <h4>Statistics</h4>
                <p>No statistics available for this player.</p>
                <a asp-controller="Stats" asp-action="Create" asp-route-playerId="@Model.Id" class="btn btn-primary">Add Stats</a>
            </div>
        }
    </div>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>