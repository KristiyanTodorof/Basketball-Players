@using BasketballPlayers.Application.ViewModels.PlayerViewModels
@model PlayerDetailViewModel

@{
    ViewData["Title"] = "Delete Player";
}

<h1>Delete Player</h1>

<h3>Are you sure you want to delete this player?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

    </dl>

    <div class="alert alert-warning">
        <strong>Warning!</strong> Deleting this player will also delete all associated statistics.
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
