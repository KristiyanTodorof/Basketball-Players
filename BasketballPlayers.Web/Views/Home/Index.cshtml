@using BasketballPlayers.Application.ViewModels.PlayerViewModels
@model IEnumerable<PlayerViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Basketball Players Management System</h1>
    <p class="lead">Track, manage, and analyze basketball players and their statistics.</p>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-people-fill text-primary" style="font-size: 3rem;"></i>
                <h3 class="card-title mt-3">Players</h3>
                <p class="card-text">View and manage basketball players in the system.</p>
                <div class="d-flex justify-content-center">
                    <a asp-controller="Player" asp-action="Index" class="btn btn-primary">View Players</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-graph-up text-success" style="font-size: 3rem;"></i>
                <h3 class="card-title mt-3">Statistics</h3>
                <p class="card-text">Track and analyze player performance statistics.</p>
                <div class="d-flex justify-content-center">
                    <a asp-controller="Stats" asp-action="Details" class="btn btn-primary">View Statistics</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-info-circle-fill text-info" style="font-size: 3rem;"></i>
                <h3 class="card-title mt-3">About</h3>
                <p class="card-text">Learn more about the Basketball Players Management System.</p>
                <div class="d-flex justify-content-center">
                    <a asp-controller="Home" asp-action="About" class="btn btn-info">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-8">
    <div class="card">
        <div class="card-header">
            <h5>Recent Players</h5>
        </div>
        <div class="card-body">
            
            @if(Model != null){
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var player in Model.Take(5))
                            {
                                <tr class="player-row">
                                    <td>@player.Name</td>
                                    <td>
                                        <a asp-controller="Player" asp-action="Details" asp-route-id="@player.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No players have been added yet.
                    <a asp-controller="Player" asp-action="Create">Add your first player</a>
                </div>
            }
            
            
        </div>
    </div>
</div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-flex flex-wrap justify-content-center gap-3">
                    <a asp-controller="Player" asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus-circle me-2"></i>Add New Player
                    </a>
                    <a asp-controller="Player" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-list me-2"></i>View All Players
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>